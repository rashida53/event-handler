    <!--login form-->
    <div class="login-form font-family-karla">
        <form>
            <label for="username"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="username" required>
            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required>
        
            <button type="submit">Login</button>
            <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
            <span class="forgot-psw">Forgot <a href="#">password?</a></span>
            <label for="create-account">Don't have an account? <button class="create-account">Sign up!</button></label>
            <!--button up there needs functionality-->
