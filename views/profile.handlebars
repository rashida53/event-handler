            <h3>Browse catering options in this neighborhood!</h3>
            <form class="catering-options-form">

                <div>
                    <label for="dish-query">Enter a dish name</label>
                    <input type="text" id="dish-query" name="dish-query" />
                </div>
                <div>
                    <button type="submit">Confirm</button>
                </div>
            </form>
        </div> --}}
    </section>
    {{#if events.length}}
    <aside class="w-full md:w-1/3 flex flex-col items-center px-3">
        <h1 class="text-center text-2xl text-gray-700 font-bold">Your Events</h2>

            <div class="w-full bg-white shadow flex flex-col my-4 p-6">
                {{#each events as |event| }}
                <section class="w-full md:w-2/3 flex flex-col items-center px-3">

                    <article class="flex flex-col shadow my-4">
                        <div class="bg-white flex flex-col justify-start p-6">
                            <a href="#" class="text-blue-700 text-sm font-bold uppercase pb-4">Event header</a>
                            <a href="/api/events/{{event.id}}"
                                class="text-3xl font-bold hover:text-gray-700 pb-4">{{event.title}}</a>
                            <a href="#" class="pb-6">{{event.description}}</a>
                            {{#if events.countData}}
                            <a href="#" class="pb-6">Currently going to your event: {{event.countData}}</a>
                            {{else}}
                            <a href="#" class="pb-6">Currently going to your event: 0</a>
                            {{/if}}
                        </div>
                    </article>

                </section>
                {{/each}}
            </div>

            {{/if}}
    </aside>
</div>

<script src="/js/event.js"></script>