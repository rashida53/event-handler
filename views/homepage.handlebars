<body class="bg-white font-family-karla">

    <!-- Top Bar Nav -->
    <nav class="w-full py-4 bg-blue-800 shadow">
        <div class="w-full container mx-auto flex flex-wrap items-center justify-between">

            <nav>
                <ul class="flex items-center justify-between font-bold text-sm text-white uppercase no-underline">
                    <li><a class="hover:text-gray-200 hover:underline px-4" href="#">Home</a></li>
                    <li><a class="hover:text-gray-200 hover:underline px-4" href="#">Log In</a></li>
                    <li><a href="/profile" class="hover:text-gray-200 hover:underline px-4" href="#">Profile</a></li>

                </ul>
            </nav>
        </div>

    </nav>

    <!-- Text Header -->
    <header class="w-full container mx-auto">
        <div class="flex flex-col items-center py-12">
            <a class="font-bold text-gray-800 uppercase hover:text-gray-700 text-5xl" href="#">
                Upcoming Events
            </a>
            <p class="text-lg text-gray-600">
                Events in your area
            </p>
        </div>
    </header>
    {{#each events as |event| }}
    <section class="w-full md:w-2/3 flex flex-col items-center px-3">

        <article class="flex flex-col shadow my-4">
            <!-- Article Image -->
            <!-- <a href="#" class="hover:opacity-75">
                    YOU COULD PUT AN IMAGE HERE
                    <img src="https://source.unsplash.com/collection/1346951/1000x500?sig=1">
                </a> -->
            <div class="bg-white flex flex-col justify-start p-6">
                <a href="#" class="text-blue-700 text-sm font-bold uppercase pb-4">Event header</a>
                <a href="#" class="text-3xl font-bold hover:text-gray-700 pb-4">{{title}}</a>
                <p href="#" class="text-sm pb-3">
                    Hosted by {{user.username}}
                </p>
                <a href="#" class="pb-6">{{description}}</a>
            </div>
        </article>

    </section>
    {{/each}}


</body>