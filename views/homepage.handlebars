<!-- Text Header -->
<div class="container mx-auto flex flex-wrap py-6">
    <section class="w-full md:w-2/3 flex flex-col items-center px-3">

        <header class="w-full container mx-auto">
            <div class="flex flex-col items-center py-12">
                <a class="font-bold text-gray-800 uppercase hover:text-gray-700 text-5xl" href="#">
                    Upcoming Events
                </a>
                <p class="text-lg text-gray-600">
                    Events in your area
                </p>
            </div>
        </header>
        {{!-- renders all events in neighborhood --}}
        {{#each events as |event| }}
        <div class="container mx-auto flex flex-wrap py-6">
            <section class="w-full md:w-2/3 flex flex-col items-center px-3">

                <article class="flex flex-col shadow my-4">
                    <div class="bg-white flex flex-col justify-start p-6">
                        <a href="#" class="text-blue-700 text-sm font-bold uppercase pb-4">{{category.name}}</a>
                        <a href="/api/events/{{event.id}}"
                            class="text-3xl font-bold hover:text-gray-700 pb-4">{{event.title}}</a>
                        <p href="#" class="text-sm pb-3">
                            Hosted by {{event.user.username}}
                        </p>
                        <a href="#" class="pb-6">{{event.description}}</a>
                    </div>
                </article>

            </section>
        </div>
        {{/each}}
    </section>


    {{!-- renders all open errands --}}
    {{#if errands.length}}
    <aside class="w-full md:w-1/3 flex flex-col px-3">
        <h1 class="text-center text-2xl text-gray-700 font-bold py-12">Open Errands</h2>
            {{#each errands as |errand| }}
            <a href="#"
                class="flex flex-col items-center bg-white border rounded-lg shadow-md md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
                <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"
                    src="/images/{{errand.img_name}}.jpg" alt="errand photo">
                <div class="flex flex-col justify-between p-4 leading-normal">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{errand.name}}
                    </h5>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                        Contact: {{errand.contact}}</p>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                        Pay: ${{errand.pay}}</p>
                </div>
            </a>
            {{/each}}

            {{/if}}
    </aside>

</div>